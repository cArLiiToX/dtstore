<config>
    <api>
        <resources>
            <amazonproducts_amazonproduct translate="title" module="amazonproducts_amazonproducts">
                <title>Amazon Product API</title>
                <model>amazonproducts_amazonproducts/amazonproduct_api</model>
                <acl>amazonproducts/amazonproduct</acl>
                <methods>
                    <list translate="title" module="amazonproducts_amazonproducts">
                        <title>Retrieve list of amazon products</title>
                        <method>items</method>
                        <acl>amazonproducts/amazonproduct/list</acl>
                    </list>
                    <info translate="title" module="amazonproducts_amazonproducts">
                        <title>Retrieve amazon product info</title>
                        <acl>amazonproducts/amazonproduct/info</acl>
                    </info>
                    <add translate="title" module="amazonproducts_amazonproducts">
                        <title>Add amazon product</title>
                        <acl>amazonproducts/amazonproduct/add</acl>
                    </add>
                    <update translate="title" module="amazonproducts_amazonproducts">
                        <title>Update amazon product</title>
                        <acl>amazonproducts/amazonproduct/update</acl>
                    </update>
                    <remove translate="title" module="amazonproducts_amazonproducts">
                        <title>Remove amazon product</title>
                        <acl>amazonproducts/amazonproduct/remove</acl>
                    </remove>
                    <level translate="title" module="amazonproducts_amazonproducts">
                        <title>Retrieve one level of amazon products</title>
                        <acl>amazonproducts/amazonproduct/info</acl>
                    </level>
                    <move translate="title" module="amazonproducts_amazonproducts">
                        <title>Move amazon product in tree</title>
                        <acl>amazonproducts/amazonproduct/move</acl>
                    </move>
                    <assignProduct translate="title" module="amazonproducts_amazonproducts">
                        <title>Assign product to Amazon Product</title>
                        <acl>amazonproducts/amazonproduct/update</acl>
                    </assignProduct>
                    <unassignProduct translate="title" module="amazonproducts_amazonproducts">
                        <title>Remove product from amazon product</title>
                        <acl>amazonproducts/amazonproduct/update</acl>
                    </unassignProduct>
                </methods>
                <faults module="amazonproducts_amazonproducts">
                    <amazonproduct_not_exists>
                        <code>101</code>
                        <message>Requested amazon product does not exist.</message>
                    </amazonproduct_not_exists>
                    <invalid_data>
                        <code>102</code>
                        <message>Provided data is invalid.</message>
                    </invalid_data>
                    <save_error>
                        <code>103</code>
                        <message>Error while saving amazon product. Details in error message.</message>
                    </save_error>
                    <remove_error>
                        <code>104</code>
                        <message>Error while removing amazon product. Details in error message.</message>
                    </remove_error>
                    <not_moved>
                        <code>105</code>
                        <message>Amazon Product not moved. Details in error message.</message>
                    </not_moved>
                    <product_not_exists>
                        <code>106</code>
                        <message>Product does not exist.</message>
                    </product_not_exists>
                </faults>
            </amazonproducts_amazonproduct>
        </resources>
        <resources_alias>
            <amazonproduct>amazonproducts_amazonproduct</amazonproduct>
        </resources_alias>
        <v2>
            <resources_function_prefix>
                <amazonproduct>amazonproductsAmazonproduct</amazonproduct>
            </resources_function_prefix>
        </v2>
        <acl>
            <resources>
                <amazonproducts_amazonproducts translate="title" module="amazonproducts_amazonproducts">
                    <title>AmazonProducts</title>
                    <amazonproduct translate="title" module="amazonproducts_amazonproducts">
                        <title>Amazon Product</title>
                        <sort_order>0</sort_order>
                        <list translate="title" module="amazonproducts_amazonproducts">
                            <title>List</title>
                        </list>
                        <info translate="title" module="amazonproducts_amazonproducts">
                            <title>Info</title>
                        </info>
                        <add translate="title" module="amazonproducts_amazonproducts">
                            <title>Add</title>
                        </add>
                        <update translate="title" module="amazonproducts_amazonproducts">
                            <title>Update</title>
                        </update>
                        <remove translate="title" module="amazonproducts_amazonproducts">
                            <title>Remove</title>
                        </remove>
                        <move translate="title" module="amazonproducts_amazonproducts">
                            <title>Move</title>
                        </move>
                    </amazonproduct>
                </amazonproducts_amazonproducts>
            </resources>
        </acl>
    </api>
</config>
