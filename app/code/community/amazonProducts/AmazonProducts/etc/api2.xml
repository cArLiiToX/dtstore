<config>
    <api2>
        <resource_groups>
            <amazonproducts_amazonproducts translate="title" module="amazonproducts_amazonproducts">
                <title>AmazonProducts</title>
                <sort_order>120</sort_order>
                <children>
                    <amazonproducts_amazonproducts_amazonproduct translate="title" module="amazonproducts_amazonproducts">
                        <title>Amazon Product</title>
                        <sort_order>0</sort_order>
                    </amazonproducts_amazonproducts_amazonproduct>

                </children>
            </amazonproducts_amazonproducts>
        </resource_groups>
        <resources>
            <amazonproducts_amazonproducts_amazonproduct translate="title" module="amazonproducts_amazonproducts">
                <group>amazonproducts_amazonproducts_amazonproduct</group>
                <model>amazonproducts_amazonproducts/api2_amazonproduct</model>
                <working_model>amazonproducts_amazonproducts/amazonproduct</working_model>
                <title>Amazon Product</title>
                <sort_order>0</sort_order>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <attributes translate="entity_id name enabled link status parent_id path position level children_count" module="amazonproducts_amazonproducts">
                    <entity_id>Id</entity_id>
                    <name>Name</name>
                    <enabled>Enabled</enabled>
                    <link>Amazon Link</link>
                    <status>Enabled</status>
                    <parent_id>Parent id</parent_id>
                    <path>Path</path>
                    <position>Position</position>
                    <level>Level</level>
                    <children_count>Children count</children_count>
                </attributes>
                <routes>
                    <route_entity>
                        <route>/amazonproducts_amazonproducts/:id</route>
                        <action_type>entity</action_type>
                    </route_entity>
                    <route_entity_with_store>
                        <route>/amazonproducts_amazonproducts/:id/store/:store</route>
                        <action_type>entity</action_type>
                    </route_entity_with_store>
                    <route_collection>
                        <route>/amazonproducts_amazonproducts</route>
                        <action_type>collection</action_type>
                    </route_collection>
                    <route_collection_with_store>
                        <route>/amazonproducts_amazonproducts/store/:store</route>
                        <action_type>collection</action_type>
                    </route_collection_with_store>
                </routes>
                <versions>1</versions>
            </amazonproducts_amazonproducts_amazonproduct>

        </resources>
    </api2>
</config>
