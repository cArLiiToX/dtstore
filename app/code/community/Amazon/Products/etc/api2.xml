<config>
    <api2>
        <resource_groups>
            <amazon_products translate="title" module="amazon_products">
                <title>Products</title>
                <sort_order>120</sort_order>
                <children>
                    <amazon_products_amazon translate="title" module="amazon_products">
                        <title>Amazon Product</title>
                        <sort_order>0</sort_order>
                    </amazon_products_amazon>

                </children>
            </amazon_products>
        </resource_groups>
        <resources>
            <amazon_products_amazon translate="title" module="amazon_products">
                <group>amazon_products_amazon</group>
                <model>amazon_products/api2_amazon</model>
                <working_model>amazon_products/amazon</working_model>
                <title>Amazon Product</title>
                <sort_order>0</sort_order>
                <privileges>
                    <admin>
                        <create>1</create>
                        <retrieve>1</retrieve>
                        <update>1</update>
                        <delete>1</delete>
                    </admin>
                    <customer>
                        <retrieve>1</retrieve>
                    </customer>
                    <guest>
                        <retrieve>1</retrieve>
                    </guest>
                </privileges>
                <attributes translate="entity_id name link status" module="amazon_products">
                    <entity_id>Id</entity_id>
                    <name>Name</name>
                    <link>Amazon Link</link>
                    <status>Enabled</status>
                </attributes>
                <routes>
                    <route_entity>
                        <route>/products_amazons/:id</route>
                        <action_type>entity</action_type>
                    </route_entity>
                    <route_entity_with_store>
                        <route>/products_amazons/:id/store/:store</route>
                        <action_type>entity</action_type>
                    </route_entity_with_store>
                    <route_collection>
                        <route>/products_amazons</route>
                        <action_type>collection</action_type>
                    </route_collection>
                    <route_collection_with_store>
                        <route>/products_amazons/store/:store</route>
                        <action_type>collection</action_type>
                    </route_collection_with_store>
                </routes>
                <versions>1</versions>
            </amazon_products_amazon>

        </resources>
    </api2>
</config>
