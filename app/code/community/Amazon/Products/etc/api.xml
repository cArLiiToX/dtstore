<config>
    <api>
        <resources>
            <products_amazon translate="title" module="amazon_products">
                <title>Amazon Product API</title>
                <model>amazon_products/amazon_api</model>
                <acl>products/amazon</acl>
                <methods>
                    <list translate="title" module="amazon_products">
                        <title>Retrieve list of amazon products</title>
                        <method>items</method>
                        <acl>products/amazon/list</acl>
                    </list>
                    <info translate="title" module="amazon_products">
                        <title>Retrieve amazon product info</title>
                        <acl>products/amazon/info</acl>
                    </info>
                    <add translate="title" module="amazon_products">
                        <title>Add amazon product</title>
                        <acl>products/amazon/add</acl>
                    </add>
                    <update translate="title" module="amazon_products">
                        <title>Update amazon product</title>
                        <acl>products/amazon/update</acl>
                    </update>
                    <remove translate="title" module="amazon_products">
                        <title>Remove amazon product</title>
                        <acl>products/amazon/remove</acl>
                    </remove>
                    <currentStore>
                        <title>Set/Get current store view</title>
                    </currentStore>
                    <listOfAdditionalAttributes translate="title" module="amazon_products">
                        <title>Get list of non-default attributes</title>
                        <method>getAdditionalAttributes</method>
                    </listOfAdditionalAttributes>
                    <assignProduct translate="title" module="amazon_products">
                        <title>Assign product to Amazon Product</title>
                        <acl>products/amazon/update</acl>
                    </assignProduct>
                    <unassignProduct translate="title" module="amazon_products">
                        <title>Remove product from amazon product</title>
                        <acl>products/amazon/update</acl>
                    </unassignProduct>
                </methods>
                <faults module="amazon_products">
                    <amazon_not_exists>
                        <code>101</code>
                        <message>Requested amazon product does not exist.</message>
                    </amazon_not_exists>
                    <invalid_data>
                        <code>102</code>
                        <message>Provided data is invalid.</message>
                    </invalid_data>
                    <save_error>
                        <code>103</code>
                        <message>Error while saving amazon product. Details in error message.</message>
                    </save_error>
                    <remove_error>
                        <code>104</code>
                        <message>Error while removing amazon product. Details in error message.</message>
                    </remove_error>
                    <product_not_exists>
                        <code>105</code>
                        <message>Product does not exist.</message>
                    </product_not_exists>
                    <store_not_exists>
                        <code>100</code>
                        <message>Requested store view not found.</message>
                    </store_not_exists>
                </faults>
            </products_amazon>
            <products_amazon_attribute translate="title" module="amazon_products">
                <title>Product attributes API</title>
                <model>amazon_products/amazon_attribute_api</model>
                <acl>products/amazon</acl>
                <methods>
                    <currentStore translate="title" module="amazon_products">
                        <title>Set/Get current store view</title>
                        <acl>products/amazon_attribute/write</acl>
                    </currentStore>
                    <list translate="title" module="amazon_products">
                        <title>Retrieve attribute list</title>
                        <method>items</method>
                        <acl>products/amazon_attribute/read</acl>
                    </list>
                    <options translate="title" module="amazon_products">
                        <title>Retrieve attribute options</title>
                        <acl>products/amazon_attribute/read</acl>
                    </options>
                    <types translate="title" module="amazon_products">
                        <title>Get list of possible attribute types</title>
                        <acl>products/amazon_attribute/types</acl>
                    </types>
                    <create translate="title" module="amazon_products">
                        <title>Create new attribute</title>
                        <acl>products/amazon_attribute/create</acl>
                    </create>
                    <update translate="title" module="amazon_products">
                        <title>Update attribute</title>
                        <acl>products/amazon_attribute/update</acl>
                    </update>
                    <remove translate="title" module="amazon_products">
                        <title>Delete attribute</title>
                        <acl>products/amazon_attribute/remove</acl>
                    </remove>
                    <info translate="title" module="amazon_products">
                        <title>Get full information about attribute with list of options</title>
                        <acl>products/amazon_attribute/info</acl>
                    </info>
                    <addOption translate="title" module="amazon_products">
                        <title>Add option</title>
                        <acl>products/amazon_attribute/option/add</acl>
                    </addOption>
                    <removeOption translate="title" module="amazon_products">
                        <title>Remove option</title>
                        <acl>products/amazon_attribute/option/remove</acl>
                    </removeOption>
                </methods>
                <faults module="amazon_products">
                    <store_not_exists>
                        <code>100</code>
                        <message>Requested store view not found.</message>
                    </store_not_exists>
                    <not_exists>
                        <code>101</code>
                        <message>Requested attribute not found.</message>
                    </not_exists>
                    <invalid_parameters>
                        <code>102</code>
                        <message>Invalid request parameters.</message>
                    </invalid_parameters>
                    <invalid_code>
                        <code>103</code>
                        <message>Attribute code is invalid. Please use only letters (a-z), numbers (0-9) or underscore(_) in this field, first character should be a letter.</message>
                    </invalid_code>
                    <invalid_frontend_input>
                        <code>104</code>
                        <message>Incorrect attribute type.</message>
                    </invalid_frontend_input>
                    <unable_to_save>
                        <code>105</code>
                        <message>Unable to save attribute.</message>
                    </unable_to_save>
                    <can_not_delete>
                        <code>106</code>
                        <message>This attribute cannot be deleted.</message>
                    </can_not_delete>
                    <can_not_edit>
                        <code>107</code>
                        <message>This attribute cannot be edited.</message>
                    </can_not_edit>
                    <unable_to_add_option>
                        <code>108</code>
                        <message>Unable to add option.</message>
                    </unable_to_add_option>
                    <unable_to_remove_option>
                        <code>109</code>
                        <message>Unable to remove option.</message>
                    </unable_to_remove_option>
                </faults>
            </products_amazon_attribute>

        </resources>
        <resources_alias>
            <amazon>products_amazon</amazon>
            <amazon_attribute>products_amazon_attribute</amazon_attribute>
        </resources_alias>
        <v2>
            <resources_function_prefix>
                <amazon>productsAmazon</amazon>
                <amazon_attribute>productsAmazonAttribute</amazon_attribute>
            </resources_function_prefix>
        </v2>
        <acl>
            <resources>
                <amazon_products translate="title" module="amazon_products">
                    <title>Products</title>
                    <amazon translate="title" module="amazon_products">
                        <title>Amazon Product</title>
                        <sort_order>0</sort_order>
                        <list translate="title" module="amazon_products">
                            <title>List</title>
                        </list>
                        <info translate="title" module="amazon_products">
                            <title>Info</title>
                        </info>
                        <add translate="title" module="amazon_products">
                            <title>Add</title>
                        </add>
                        <update translate="title" module="amazon_products">
                            <title>Update</title>
                        </update>
                        <remove translate="title" module="amazon_products">
                            <title>Remove</title>
                        </remove>
                    </amazon>
                    <amazon_attribute translate="title" module="amazon_products">
                        <title>Amazon Product Attributes</title>
                        <sort_order>6</sort_order>
                        <currentStore translate="title" module="amazon_products">
                            <title>Set/Get current store view</title>
                        </currentStore>
                        <list translate="title" module="amazon_products">
                            <title>Retrieve attribute list</title>
                        </list>
                        <options translate="title" module="amazon_products">
                            <title>Retrieve attribute options</title>
                        </options>
                        <types translate="title" module="amazon_products">
                            <title>Get list of possible attribute types</title>
                        </types>
                        <create translate="title" module="amazon_products">
                            <title>Create new attribute</title>
                        </create>
                        <update translate="title" module="amazon_products">
                            <title>Update attribute</title>
                        </update>
                        <remove translate="title" module="amazon_products">
                            <title>Remove attribute</title>
                        </remove>
                        <info translate="title" module="amazon_products">
                            <title>Get full information about attribute with list of options</title>
                        </info>
                        <addOption translate="title" module="amazon_products">
                            <title>Add option</title>
                        </addOption>
                        <removeOption translate="title" module="amazon_products">
                            <title>Remove option</title>
                        </removeOption>
                    </amazon_attribute>

                </amazon_products>
            </resources>
        </acl>
    </api>
</config>
