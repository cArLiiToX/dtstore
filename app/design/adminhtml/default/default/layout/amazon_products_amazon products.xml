<layout>
    <adminhtml_amazon products_amazonproduct_edit>
        <update handle="editor"/>
        <reference name="head">
            <action method="setCanLoadTinyMce"><load>1</load></action>
        </reference>
        <reference name="js">
            <block type="core/template" name="catalog.wysiwyg.js" template="catalog/wysiwyg/js.phtml"/>
        </reference>
        <reference name="left">
            <block name="amazonproduct.tree" type="amazon_products_amazon products/adminhtml_amazonproduct_tree" />
        </reference>
        <reference name="content">
            <block name="amazonproduct.edit" type="amazon_products_amazon products/adminhtml_amazonproduct_edit" template="amazon_products_amazon products/amazonproduct/edit.phtml" />
        </reference>
        <reference name="js">
            <block type="core/template" template="catalog/wysiwyg/js.phtml" name="catalog.wysiwyg.js" />
        </reference>
    </adminhtml_amazon products_amazonproduct_edit>
    <adminhtml_amazon products_amazonproduct_catalog_product_amazonproducts>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="amazon_products_amazon products/adminhtml_catalog_product_edit_tab_amazonproduct" name="catalog.product.edit.tab.amazonproducts"/>
        </block>
    </adminhtml_amazon products_amazonproduct_catalog_product_amazonproducts>
    <adminhtml_amazon products_amazonproduct_attribute_index>
        <reference name="content">
            <block type="amazon_products_amazon products/adminhtml_amazonproduct_attribute" name="attribute_grid"></block>
        </reference>
    </adminhtml_amazon products_amazonproduct_attribute_index>
    <adminhtml_amazon products_amazonproduct_attribute_edit>
        <reference name="left">
            <block type="amazon_products_amazon products/adminhtml_amazonproduct_attribute_edit_tabs" name="attribute_edit_tabs"></block>
        </reference>
        <reference name="content">
            <block type="amazon_products_amazon products/adminhtml_amazonproduct_attribute_edit" name="attribute_edit_content"></block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" name="attribute_edit_js" template="amazon_products_amazon products/attribute/js.phtml">
                <action method="setMainEntityName"><name>amazonproduct</name></action>
            </block>
        </reference>
    </adminhtml_amazon products_amazonproduct_attribute_edit>
</layout>
